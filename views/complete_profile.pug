extends layout

block content
  h1= "Complete Profile"
  
   body
    h1= trainers                                               
    form(action="/users" method="POST")     
    br              
    p Name:
    input(type="text" name="users_name" id="users_name2" placeholder="" )
    br
    br
    p Username:
    input(type="text" name="username" id="username2" placeholder="")
    br
    br
    br
    #user_type2
    input(type='radio' name='user_type2' id= 'Trainer_type2' value='Trainer')
