    br
    input(type='radio' name='user_type2' id= 'Trainee_type2' value='Trainee')
    |  Trainee
    br
    br
    br
    #expeience2
    p Years of Experience: 
    input(type='radio' name='experience1' id= 'experience1' value='Trainer')
    |  1
    br
    input(type='radio' name='experience2' id= 'experience2' value='Trainee')
    |  2
    br
    input(type='radio' name='experience3-5' id= 'experience3-5' value='Trainer')
